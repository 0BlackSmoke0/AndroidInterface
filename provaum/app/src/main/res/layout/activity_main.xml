<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã‰ mais de 5 mil!"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />



    <EditText

        android:id="@+id/nomePersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nome do Personagem: "
        android:inputType="text"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.300"/>

    <EditText

        android:id="@+id/kiPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite o ki de seu personagem: "
        android:inputType="number"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.380"/>

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transformar SSJ!"
        android:onClick="ssj1"
        android:id="@+id/btn1"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="341dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.500"
        />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transformar SSJ2!"
        tools:layout_editor_absoluteX="216dp"
        android:onClick="ssj2"
        android:id="@+id/btn2"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.590"/>
</androidx.constraintlayout.widget.ConstraintLayout>