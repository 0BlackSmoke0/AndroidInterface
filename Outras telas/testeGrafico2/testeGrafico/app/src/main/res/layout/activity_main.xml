<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:text="Insumo"
        android:textColor="#31ac7f"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/faixa"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="39dp" />

    <ImageView
        android:id="@+id/faixa"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/faixa"
        android:theme="@style/AppTheme" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/grafica"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29"
        tools:layout_editor_absoluteX="0dp">


    </com.jjoe64.graphview.GraphView>

    <TextView
        android:id="@+id/leg0"
        android:layout_width="213dp"
        android:layout_height="79dp"
        android:layout_marginTop="36dp"
        android:text="@string/legenda"
        android:textColor="#31ac7f"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/grafica" />



    <ImageView
        android:id="@+id/btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/seta2"
        android:theme="@style/AppTheme"
        app:layout_constraintTop_toBottomOf="@+id/grafica"
        tools:layout_editor_absoluteX="29dp" />
</androidx.constraintlayout.widget.ConstraintLayout>