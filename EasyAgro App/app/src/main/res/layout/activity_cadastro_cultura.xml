<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityCadastroCultura">

<!--Menu fixo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/link_cadastroCultura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="40dp"
            android:text="Cadastro"
            android:fontFamily="@font/exo_2_semibold"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/link_listaCultura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:text="Lista"
            android:fontFamily="@font/exo_2_semibold"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/link_graficoCultura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:text="Gráfico"
            android:fontFamily="@font/exo_2_semibold"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/link_menuCultura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:textColor="#FFF"
            android:text="°°°"
            android:textSize="20sp"
            android:rotation="@android:integer/status_bar_notification_info_maxnum"/>


    </LinearLayout>
<!--Rolagem de tela -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<!--LinearLayout principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/faixa_cultura"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/faixa"
            android:theme="@style/AppTheme"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Cadastro de cultura"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Nome da cultura:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <EditText
            android:id="@+id/input_nome_cultura"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:background="@drawable/inputboard"
            android:hint="Informe a cultura..."
            android:fontFamily="@font/exo_2"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Tipo da Cultura:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <Spinner
            android:id="@+id/input_maturacao_cultura"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:background="@drawable/inputboard"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_tipo"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Unidade de venda:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <Spinner
            android:id="@+id/input_uni_vendas_cultura"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/inputboard"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_uni_venda"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Regação recomendada:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>
        <!--input regação recomendada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_regacao_recomendada"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/inputboard"
                android:fontFamily="@font/exo_2"
                android:inputType="number"
                android:hint=" .  .  ."
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="70dp"/>

            <Spinner
                android:id="@+id/input_quant_agua_rec"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/inputboard"
                android:drawSelectorOnTop="true"
                android:entries="@array/array_quant_agua_aplicada"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>
        <!--Campo espaço recomendado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Espaçamento recomendado:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>
        <!--input espaçamento recomendado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_espaço_rec"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/inputboard"
                android:fontFamily="@font/exo_2"
                android:inputType="number"
                android:hint=" .  .  ."
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="70dp"/>

            <Spinner
                android:id="@+id/input_esp_rec"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/inputboard"
                android:drawSelectorOnTop="true"
                android:entries="@array/array_area"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>
        <!--Campos e inputs "Preço unitario e tempo de maturação" -->
        <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Preço Unitario:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <EditText
            android:id="@+id/input_preco_uni"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/inputboard"
            android:fontFamily="@font/exo_2"
            android:hint="R$"
            android:inputType="numberDecimal"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_2"
            android:text="Tempo de maturação:"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>


        <Spinner
            android:id="@+id/input_tempo_maturacao"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/inputboard"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_name"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"/>

</LinearLayout>
        <!--Botões Cadastrar e Cancelar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/cadastrar_cultuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:fontFamily="@font/exo_2"
                android:text="Cadastrar"
                android:textColor="#FFF"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/cancelar_cultuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btncancelar"
                android:fontFamily="@font/exo_2"
                android:text="cancelar"
                android:textColor="#FFF"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
      </LinearLayout>
    </ScrollView>
</LinearLayout>


