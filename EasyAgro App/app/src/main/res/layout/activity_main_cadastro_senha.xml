<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityCadastroSenha">

    <ImageView
        android:id="@+id/faixa"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/faixa"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/exo_2_semibold"
        android:text="@string/senhaTextoPrincipal"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/exo_2_semibold"
        android:text="@string/senhaCriar"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/input_cadastro_senha"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/inputboard"
        android:fontFamily="@font/exo_2"
        android:hint="@string/senhainput"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/exo_2_semibold"
        android:text="@string/senhaConfirmar"
        android:textColor="#000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/input_confirma_senha"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/inputboard"
        android:fontFamily="@font/exo_2"
        android:hint="@string/senhainput"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bt_validarSenha"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btncadastrar"
        android:fontFamily="@font/exo_2"
        android:text="@string/senhaFinalizar"
        android:textColor="#FFF" />


</LinearLayout>