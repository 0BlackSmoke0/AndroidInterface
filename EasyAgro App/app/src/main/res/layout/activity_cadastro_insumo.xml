<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivityCadastroInsumo">

<!-- Menu fixo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/link_cadastroInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="40dp"
            android:text="Cadastro"
            android:fontFamily="@font/exo_2_semibold"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/link_listaInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:text="Lista"
            android:fontFamily="@font/exo_2_semibold"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/link_graficoInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="20dp"
            android:text="Gráfico"
            android:fontFamily="@font/exo_2_semibold"
            android:textColor="#FFF"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/link_menuInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="3dp"
            android:textColor="#FFF"
            android:text="°°°"
            android:textSize="20sp"
            android:rotation="@android:integer/status_bar_notification_info_maxnum"/>


    </LinearLayout>
<!--Rolagem de tela -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Campos e inputs "nome insumo, tipo insumo, tempo de ação" -->
        <!--LinearLayout Principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/faixa_insumo"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/faixa"
                android:theme="@style/AppTheme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="Cadastro de insumos"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/exo_2"
                android:text="Nome do insumo:"
                android:textColor="#000"
                android:textSize="15sp" />


            <EditText
                android:id="@+id/input_nome_insumo"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/inputboard"
                android:fontFamily="@font/exo_2"
                android:hint="Informe o insumo..."
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/exo_2"
                android:text="Tipo do insumo:"
                android:textColor="#000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/input_tipo_insumo"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/inputboard"
                android:drawSelectorOnTop="true"
                android:entries="@array/array_insumos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/exo_2"
                android:text="Tempo de ação:"
                android:textColor="#000"
                android:textSize="15sp" />
            <!--inputs "Tempo de ação, " -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_temp_acao_insumo"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/inputboard"
                    android:fontFamily="@font/exo_2"
                    android:hint=" .  .  ."
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/input_tempo_acao_insumo"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/inputpeq"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/array_tempo_acao" />

            </LinearLayout>
            <!--Campo quantidade recomendada -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/exo_2"
                    android:text="Quantidade recomendada:"
                    android:textColor="#000"
                    android:textSize="15sp" />

            </LinearLayout>
            <!--input quantidade recomendada -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_quant_rec_insumo"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/inputboard"
                    android:fontFamily="@font/exo_2"
                    android:hint=" .  .  ."
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/input_quant_recomendada_insumo"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/inputpeq"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/array_insumos_quant_recomendada" />

            </LinearLayout>
            <!--Campos e inputs "Preço e volume do recipiente" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/exo_2"
                    android:text="Preço:"
                    android:textColor="#000"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/input_preco_insumo"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/inputboard"
                    android:fontFamily="@font/exo_2"
                    android:hint="R$"
                    android:inputType="numberDecimal"
                    android:textColor="#000"
                    android:textSize="15sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/exo_2"
                    android:text="Volume do recipiente:"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:id="@+id/input_insumo_valor_recipiente_select"
                        android:layout_width="64dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/inputpeq"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/array_insumos_quant_recomendada" />

                <EditText
                    android:id="@+id/input_insumo_valor_recipiente"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/inputboard"
                    android:fontFamily="@font/exo_2"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>
            <!--Botões Cadastrar e Cancelar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cadastrar_insumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn"
                    android:fontFamily="@font/exo_2"
                    android:text="Cadastrar"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/cancelar_insumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btncancelar"
                    android:fontFamily="@font/exo_2"
                    android:text="cancelar"
                    android:textColor="#FFF" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
