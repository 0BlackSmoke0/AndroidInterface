<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Plantacao.MainActivityAplicacaoPlantacao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/faixa"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/faixa"
        android:theme="@style/AppTheme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/exo_2_semibold"
        android:text="@string/plantacaoTextoPrincipal"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/exo_2_semibold"
        android:text="@string/hidriInsumos"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/exo_2"
            android:text="@string/plantacaoSelecionarInsumos"
            android:textColor="#000"
            android:textSize="15sp" />


        <Spinner
            android:id="@+id/input_selecionar_insumos_plantacao"
            android:layout_width="225dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputboard"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_padrao" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/exo_2"
        android:text="@string/plantacaoQuantidadeInsumos"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_quant_aplicada_insumo_plantacao"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputboard"
            android:fontFamily="@font/exo_2"
            android:hint=" .  .  ."
            android:inputType="number"
            android:textColor="#000"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/input_peso_litro_insumo_plantacao"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputpeq"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_insumos_quant_recomendada" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/exo_2"
            android:text="@string/plantacaoQuantidadeAgua"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_qdt_agua_aplicada"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputboard"
            android:fontFamily="@font/exo_2"
            android:hint=" .  .  ."
            android:inputType="number"
            android:textColor="#000"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/input_select_agua_aplic"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputpeq"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_quant_agua_aplicada" />

    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/exo_2"
            android:text="@string/tempRespiro"
            android:textColor="#000"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/input_temp_respiro_plantacao"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/inputboard"
                android:fontFamily="@font/exo_2"
                android:hint=" .  .  ."
                android:inputType="number"
                android:textColor="#000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/inpur_select_temp_respiro"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/inputpeq"
                android:drawSelectorOnTop="true"
                android:entries="@array/array_quant_agua_aplicada" />

        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/exo_2"
        android:text="@string/QtdDias"
        android:textColor="#000"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input_quant_agua_aplicada_plantacao_dia"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/inputboard"
            android:fontFamily="@font/exo_2"
            android:hint=" .  .  ."
            android:inputType="number"
            android:textColor="#000"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/input_quant_lt_ml_aplicad_plantacao_dia"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/inputpeq"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_tempo_acao"
            />

    </LinearLayout>

    <Button
        android:id="@+id/cadastrar_plantacao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn"
        android:fontFamily="@font/exo_2"
        android:text="@string/salvarAplicacao"
        android:onClick="salvarAplicacaoPlant"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/cancelar_plantacao"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btncancelar"
        android:fontFamily="@font/exo_2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/cancelarAplicacao"
        android:onClick="cancelarAplicacaoPlant"
        android:textColor="#FFF" />

    </LinearLayout>

</ScrollView>








