<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    tools:context=".testeVisualizacao.MainActivityVisuTesteColheita">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/link_cadastroColheitaLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="@string/menuFixoCadastrar"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/link_listaColheitaLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="@string/menuFixoLista"
                android:textColor="#BF3F51B5"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/link_graficoColheitaLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="@string/menuFixoGrafico"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/link_geralListaColheita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/bt_menu"
                android:outlineSpotShadowColor="#FFF"
                android:layout_marginRight="10dp"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do Colheita "
            android:paddingTop="100dp"
            android:paddingStart="100dp"
            android:paddingBottom="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:fontFamily="@font/exo_2_semibold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plantação coletada: Batata doce"
            android:textColor="#000"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:fontFamily="@font/exo_2_semibold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade de recipiente: 12 SC- Sacos"
            android:textColor="#000"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/exo_2_semibold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preso por recipiente: 3 KG-Kilograma"
            android:paddingStart="10dp"
            android:textColor="#000"
            android:textSize="15sp"
            android:fontFamily="@font/exo_2_semibold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço Pretendido: R$ 30.00"
            android:textColor="#000"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:fontFamily="@font/exo_2_semibold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data da Colheita: 23/06/2020"
        android:textColor="#000"
        android:paddingStart="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/exo_2_semibold"/>

    </LinearLayout>