<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/exo_2_semibold"
            android:text="@string/menuPrincipal"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_cultura"
                android:layout_width="152dp"
                android:layout_height="138dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bt_menu_inicial"
                android:drawableTop="@drawable/cultura"
                android:fontFamily="@font/exo_2"
                android:text="@string/botaoCultura"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bt_talhÃ£o"
                android:layout_width="152dp"
                android:layout_height="138dp"
                android:background="@drawable/bt_menu_inicial"
                android:drawableTop="@drawable/talhao"
                android:fontFamily="@font/exo_2"
                android:text="@string/botaoTalhao"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_insumo"
                android:layout_width="152dp"
                android:layout_height="138dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bt_menu_inicial"
                android:drawableTop="@drawable/insumo"
                android:fontFamily="@font/exo_2"
                android:text="@string/botaoInsumo"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bt_plantacao"
                android:layout_width="152dp"
                android:layout_height="138dp"
                android:background="@drawable/bt_menu_inicial"
                android:drawableTop="@drawable/plantacao"
                android:fontFamily="@font/exo_2"
                android:text="@string/botaoPlantacao"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_colheita"
                android:layout_width="152dp"
                android:layout_height="138dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bt_menu_inicial"
                android:drawableTop="@drawable/colheita"
                android:fontFamily="@font/exo_2"
                android:text="@string/botaoColheita"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bt_leilao"
                android:layout_width="152dp"
                android:layout_height="138dp"
                android:background="@drawable/bt_menu_inicial"
                android:drawableTop="@drawable/leilao"
                android:fontFamily="@font/exo_2"
                android:text="@string/botaoLeilao"
                android:textColor="#000000"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>